{
    "manifest_version": 2,
    "name": "qpp-release-page",
    "version": "1.0",
    "description": "Scrape pertinent information from release page for deployments",
    "icons": {
        "48": "icons/border-48.png"
    },
    "permissions": [
        "activeTab"
    ],
    "browser_action": {
        "default_icon": "icons/document-body-50.png",
        "default_title": "QPP Release Page",
        "default_popup": "popup/release-page-display.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content-script.js"
            ]
        }
    ]
}
